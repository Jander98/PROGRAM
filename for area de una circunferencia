void main()
{float a,r,pi;
 int n;
 pi=3,1415 ;
 cout<<"area de un circulo"<<endl;
 cout<<"ingrese el numero de areas que calculara"<<endl;
 cin>>n;
  for (int i=1;i<=n;i++)
